<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".isi">

    <TextView
        android:id="@+id/kodepertanyaan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/pertanyaan"
        android:visibility="gone"
        android:layout_marginTop="3mm"
        android:layout_marginLeft="3mm"
        android:textSize="15dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/nomor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="1"
            android:layout_marginTop="3mm"
            android:layout_marginLeft="3mm"
            android:textSize="15dp"
            />

        <TextView
            android:id="@+id/tekspertanyaan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/pertanyaan"
            android:layout_marginTop="3mm"
            android:layout_marginLeft="3mm"
            android:textSize="15dp"
            />
    </LinearLayout>


    <RadioGroup
        android:id="@+id/radioGroupNb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="3mm"
        android:layout_marginTop="2mm">


        <RadioButton
            android:id="@+id/radioya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radio_ya" />
        <RadioButton
            android:id="@+id/radiotidak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radio_tidak" />

    </RadioGroup>


</LinearLayout>